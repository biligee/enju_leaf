<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.new', :model => t('activerecord.models.create')) -%></h1>
<div id="content_list">

<%= form_for(@create) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label t('activerecord.models.patron') -%><br />
    <%- if @create.patron -%>
      <%= link_to @create.patron.full_name, @create.patron -%>
      <%= f.hidden_field :patron_id -%>
    <%- else -%>
      <%= f.text_field :patron_id -%>
    <%- end -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.models.work') -%><br />
    <%- if @create.work -%>
      <%= link_to @create.work.original_title, @create.work -%>
      <%= f.hidden_field :work_id -%>
    <%- else -%>
      <%= f.text_field :work_id -%>
    <%- end -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>

</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <%- if @create.patron -%>
      <li><%= link_to t('page.listing', :model => t('activerecord.models.work')), creator_manifestations_path(@create.patron) -%></li>
    <%- end -%>
    <%- if @create.work -%>
      <li><%= link_to t('page.listing', :model => t('activerecord.models.patron')), work_patrons_path(@create.work) -%></li>
    <%- end -%>
  </ul>
</div>
