<% is_list = is_list || @is_list %>
<%- if @current_basket && manifestation.in_basket?(@current_basket) %>
  <% if @basket%>
    <%= link_to t("checked_manifestation.delete"), checked_manifestations_delete_path(:manifestation_id => manifestation.id, :is_list => is_list, :basket_id => @basket.id), :remote => true %>
  <% else %>
    <%= link_to t("checked_manifestation.delete"), checked_manifestations_delete_path(:manifestation_id => manifestation.id, :is_list => is_list), :remote => true %>
  <% end %>
<%- else -%> 
  <%= link_to t("checked_manifestation.add"), checked_manifestations_create_path(:manifestation_id => manifestation.id, :is_list => is_list), :remote => true %>
<%- end -%> 
