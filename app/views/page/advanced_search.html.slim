#content_detail.ui-corner-all.ui-widget-content
  h1.title
    = t('page.advanced_search')
  #content_list
    = form_tag({controller: 'manifestations'}, {method: 'get'}) do
      table[style="width: 100%"]
        tr
          td
            = label_tag :query, t('page.search_term')
            | :
          td
            = search_field_tag 'query', nil, class: 'search_form_short', placeholder: t('page.search_term')
        tr
          td
            label
              = t('page.title')
              | :
          td
            = text_field_tag 'title'
        - if defined?(EnjuBookmark)
          tr
            td
              label
                = t('page.tag')
                | :
            td
              = text_field_tag 'tag'
        tr
          td
            label
              = t('agent.creator')
              | :
          td
            = text_field_tag 'creator'
        tr
          td
            label
              = t('agent.publisher')
              | :
          td
            = text_field_tag 'publisher'
        tr
          td
            label
              = t('activerecord.attributes.manifestation.isbn')
              | :
          td
            = text_field_tag 'isbn'
        tr
          td
            label
              = t('activerecord.attributes.manifestation.issn')
              | :
          td
            = text_field_tag 'issn'
        tr
          td
            label
              = t('activerecord.attributes.item.item_identifier')
              | :
          td
            = text_field_tag 'item_identifier'
        tr
          td
            label
              = t('activerecord.attributes.manifestation.date_of_publication')
              | :
          td
            = t('advanced_search.from')
            = text_field_tag 'pub_date_from', nil, class: 'date_text_field', placeholder: "#{t('page.example')}: 1978, 1978-04-12"
            = t('advanced_search.to')
            = text_field_tag 'pub_date_to', nil, class: 'date_text_field', placeholder: "#{t('page.example')}: 2011, 2011-04-12"
        tr
          td
            label
              = t('activerecord.attributes.item.acquired_at')
              | :
          td
            = t('advanced_search.from')
            = text_field_tag 'acquired_from', nil, class: 'wide_date_text_field', placeholder: "#{t('page.example')}: 2005, 2005-04-01"
            = t('advanced_search.to')
            = text_field_tag 'acquired_to', nil, class: 'wide_date_text_field', placeholder: "#{t('page.example')}: 2011, 2011-03-31"
        tr
          td
            label
              = t('page.number_of_pages')
              | :
          td
            = t('advanced_search.from')
            = text_field_tag 'number_of_pages_at_least', nil, size: 5
            = t('advanced_search.to')
            = text_field_tag 'number_of_pages_at_most', nil, size: 5
        tr
          td
          td
            = hidden_field_tag 'advanced_search', 'true'
            = submit_tag t('page.search')
      = javascript_tag("$(function(){$('#query').focus()})")
#submenu.ui-corner-all.ui-widget-content
