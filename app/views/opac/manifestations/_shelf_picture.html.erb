<%- item.shelf.picture_files.each do |picture_file| -%>
  <%= link_to image_tag('opac/grid.png', :size => '32x32', :alt => t('page.picture'), :title => t('tooltip.picture')), picture_file_path(picture_file, :format => picture_file.extname), :rel => "item_#{item.id}_manifestation_#{item.manifestation.id}" if picture_file.extname -%>
<%- end -%>
<script type="text/javascript">
  $(document).ready(function(){
      $("a[rel='item_<%= item.id -%>_manifestation_<%= item.manifestation.id -%>']").colorbox({transition:"none"});
  })
</script>
