<p><%= notice %></p>

  <%= form_tag "#{root_path}auth/identity/callback" do %>
    <div class="field">
      <%= label_tag :auth_key, "Username" %><br>
      <%= text_field_tag :auth_key %>
    </div>
    <div class="field">
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
    </div>
    <div class="actions"><%= submit_tag "Login" %></div>
  <% end %>
