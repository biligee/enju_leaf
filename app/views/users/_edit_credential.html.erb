  <div id="left_pane_detail">

  <div class="field">
    <%= f.label :username -%><br />
    <%= user.username -%>
  </div>

  <%- if current_user.has_role?('Librarian') -%>
    <div class="field">
      <%= f.label :email -%><br />
      <%= f.email_field :email, :class => 'resource_email' -%>
    </div>

    <div class="field">
      <%= f.label t('user.set_auto_generated_password') -%>
      <%= f.check_box :auto_generated_password -%>
    </div>
  <%- end -%>

  <div class="field">
    <%= f.label :expired_at -%><br />
    <%- if current_user.has_role?('Librarian') -%>
      <%= f.text_field :expired_at, :value => user.expired_at.try(:strftime, "%Y-%m-%d"), :class => 'date_text_field', :placeholder => "#{t('page.example')}: 2011-04-12"-%>
    <%- else -%>
      <%= l(user.expired_at) if user.expired_at -%>
    <%- end -%>
  </div>

  <div class="field">
    <%= f.check_box :locked -%>
    <%= f.label :locked -%>
  </div>

  </div>

  <div id="right_pane_detail">
  <%= f.fields_for :profile do |profile_f| %>
  <%- if current_user.has_role?('Librarian') -%>
    <div class="field">
      <%= profile_f.label t('activerecord.models.user_group') -%><br />
      <%= profile_f.select(:user_group_id, @user_groups.collect{|u| [u.display_name.localize, u.id]}) -%>
    </div>
  <%- end -%>

    <div class="field">
      <%= f.label t('activerecord.models.role') -%><br />
      <%= f.fields_for :user_has_role do |u| %>
        <%- if current_user.has_role?('Administrator') and current_user != user -%>
          <%= u.select :role_id, @roles.collect{|r| [r.display_name.localize, r.id]} %>
        <% else %>
          <%= u.select(:role_id, @roles.collect{|r| [r.display_name.localize, r.id]}, {}, {:disabled => 'disabled'}) -%>
        <% end %>
      <% end %>
    </div>

    <div class="field">
      <%= profile_f.label :user_number -%><br />
      <%- if current_user.has_role?('Librarian') -%>
        <%= profile_f.text_field :user_number, :class => 'resource_user_number' -%>
      <%- else -%>
        <%= user.user_number -%>
      <%- end -%>
    </div>

  <%- if current_user.has_role?('Librarian') -%>
    <div class="field">
      <%= profile_f.label t('activerecord.models.library') -%><br />
      <%= profile_f.select(:library_id, @libraries.collect{|l| [l.display_name.localize, l.id]}) -%>
    </div>

    <div class="field">
      <%= profile_f.label t('role.required_role') -%><br />
      <%= profile_f.select(:required_role_id, @roles.collect{|r| [r.display_name.localize, r.id]}) -%>
    </div>
  <%- end -%>
  <div class="field">
    <%= profile_f.label :locale -%><br />
    <%= profile_f.select(:locale, @available_languages.collect{|language| [language.display_name.localize, language.iso_639_1]}) -%>
  </div>
  <% end %>
  </div>
